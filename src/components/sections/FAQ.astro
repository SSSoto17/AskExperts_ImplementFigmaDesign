---

<section>
    <article>
        <header>
            <Tagline>FAQ</Tagline>
            <h2 class="heading-2">Customer Questions</h2>
        </header>
        <ul class="flow-space" role="list">
            {questions.map(item => {
                return <li>
                <details class="flow-space">
                    <summary>{item.q}</summary>
                    <p>{item.a}</p>
                </details>
            </li>
            })}
            
        </ul>
    </article>
</section>

<style>

    section {
        padding: 0;

    article {
        display: grid;
        gap: var(--space-m);
        background: var(--clr-secondary-01);
        padding: var(--space-2xl) var(--space-m);
        border-radius: var(--crn-popup);
        place-content: center;

        header {
            display: grid;
            gap: var(--space-xs);
            --clr-tagline-text: var(--clr-secondary-02);
            --clr-tagline-bg: var(--clr-primary-02);
            text-align: center;

            > * {place-self: center;}
        }

        ul {
            --flow-space: var(--space-xs);

            details > summary {
                    color: var(--clr-heading);
                    font-family: Cabin;
                    font-size: var(--step-2);
                    font-weight: 500;
                    line-height: 116%; /* 1.45rem */
                    list-style: none;
                    display: flex;
                    justify-content: space-between;
                    gap: var(--space-l);
                    transition: .15s ease-in;

                    &:hover {cursor: pointer;}

                    &::after {
                        content: url("../../icons/plus.svg");
                    }

                    details[open] > &::after {
                        content: url("../../icons/minus.svg");
                    }
                }
            }
    }
}

</style>