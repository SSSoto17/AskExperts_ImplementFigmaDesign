---
import Tagline from "../Tagline.astro";


---

<section data-theme="pop">
    <Tagline>Experience</Tagline>
    <header class="flow-space">
        <h2 class="heading-2">More than 25 years of experience</h2>
        <p>3000+ our clients are insured around the World</p>
        <ul role="list">
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </header>
</section>

<style>

section {
        padding: var(--space-2xl) 0;

        header {
            --flow-space: var(--step-0);            
            margin-block-end: var(--space-l);

            svg, h2, p {
                grid-column: 1 / -2;
            }
            p, button {
                grid-row: 3;
            }

            @media (600px < width) {
                display: grid;
                grid-template-columns: 1fr auto;
                grid-template-rows: repeat(3, auto);
                gap: 0 var(--space-s);
            }
        }

        ul {
            display: flex;
            gap: var(--space-s);
            
            li {
                flex-basis: min(400px, 90%);
                align-self: start;
                
                &:has(a:hover) {
                    scale: 1.1;
                }
            }
        }
    }

</style>